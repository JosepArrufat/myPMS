  "main": "index.js",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "docker:up": "docker compose up -d db db-test",
    "docker:up:db": "docker compose up -d db",
    "docker:up:test": "docker compose up -d db-test",
    "docker:down": "docker compose down",
    "docker:reset": "docker compose down -v && docker compose up -d db db-test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:push:test": "drizzle-kit push --config drizzle.test.config.ts",
    "db:drop": "drizzle-kit drop",
    "db:reset": "npx tsx scripts/reset-db.ts",
    "db:seed": "npx tsx scripts/seed.ts",
    "test": "vitest run --config src/vitest.config.ts",
    "test:watch": "vitest --config src/vitest.config.ts",
    "test:ui": "vitest --ui --config src/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config src/vitest.config.ts"
  },
