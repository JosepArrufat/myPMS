    "@types/node": "^25.0.10",
    "@types/pg": "^8.16.0",
    "@vitest/ui": "^1.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  }
